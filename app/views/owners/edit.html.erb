<h1>印主情報変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@owner, html: {class: "form-horizontal"}) do |f| %>
      <% if @owner.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @owner.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>
        <div class="form-group">
            <label for="app_owners" class="col-sm-3 control-label">名称</label>
            <div class="col-sm-7">
                <%= f.text_field :aap, size: "5x5", class: "form-control" %>
             </div>
        </div>
        <div class="form-group">
            <label for="vap1_owners" class="col-sm-3 control-label">別名1</label>
            <div class="col-sm-7">
                <%= f.text_field :vap1, size: "5x5", class: "form-control" %>
             </div>
        </div>
        <div class="form-group">
            <label for="vap2_owners" class="col-sm-3 control-label">別名2</label>
            <div class="col-sm-7">
                <%= f.text_field :vap2, size: "5x5", class: "form-control" %>
             </div>
        </div>
        <div class="form-group">
            <label for="vap3_owners" class="col-sm-3 control-label">別名3</label>
            <div class="col-sm-7">
                <%= f.text_field :vap3, size: "5x5", class: "form-control" %>
             </div>
        </div>
      <%= f.submit "更新", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div> 