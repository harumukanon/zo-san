<div class="container">
  <% if @stamp.items.exists? %>
  　<% @stamp.items.each do |f| %>
    <div id="itm-<%= f.id %>" class="panel panel-danger">
       <div class="panel-heading">
           <h5 class="panel-title">資料id:<%= f.id %></h5>
       </div>
       <div class="panel-body">
        書名:<%= f.title %><br />
　　　  著者名:<%= f.author %><br />
　　　  刊年:<%= f.year %><br />
　　　  所蔵:<%= f.holding %><br />
　　　  注記:<%= f.note %><br />
        <% if editor_signed_in? %>
                <%= link_to "資料情報を修正", edit_item_path(id: f, stamp_id: @stamp.id) %>
            <% end %>
      </div>
    </div>
    <% end %>
      資料を追加:
        <%= form_tag({controller: :items, action: :search}, class: "form-inline") do %>
        <%= text_field_tag :keyword, '', size: '100%', class: "form-control", placeholder: "資料を検索" %>
        <%= hidden_field_tag :stamp_id, @stamp.id %>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            Search
        <% end %>
        <% end %>
  <% else %>
    <%= form_tag({controller: :items, action: :search}, class: "form-inline") do %>
        <%= text_field_tag :keyword, '', size: '100%', class: "form-control", placeholder: "資料を検索" %>
        <%= hidden_field_tag :stamp_id, @stamp.id %>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            Search
        <% end %>
        <% end %>
  <% end %>
</div>