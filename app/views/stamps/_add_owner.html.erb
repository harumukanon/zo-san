<div class="container">
  <% if @stamp.owners.exists? %>
  　<% @stamp.owners.each do |f| %>
    <div id="ow-<%= f.id %>" class="panel panel-success">
      <div class="panel-heading">
        <h5 class="panel-title">印主id:<%= f.id %></h5>
      </div>
      <div class="panel-body">
       印主名:<%= f.aap %><br />
       <% if editor_signed_in? %>
                <%= link_to "印主情報を修正", edit_owner_path(id: f, stamp_id: @stamp.id) %>
             <% end %>
      </div>
    </div>
    <% end %>
      印主を追加:
        <%= form_tag({controller: :owners, action: :search}, class: "form-inline") do %>
        <%= text_field_tag :keyword, '', size: '100%', class: "form-control", placeholder: t('owner_search') %>
        <%= hidden_field_tag :stamp_id, @stamp.id %>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            Search
        <% end %>
        <% end %>
  <% else %>
    <%= form_tag({controller: :owners, action: :search}, class: "form-inline") do %>
        <%= text_field_tag :keyword, '', size: '100%', class: "form-control", placeholder: t('owner_search') %>
        <%= hidden_field_tag :stamp_id, @stamp.id %>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            Search
        <% end %>
        <% end %>
  <% end %>
</div>